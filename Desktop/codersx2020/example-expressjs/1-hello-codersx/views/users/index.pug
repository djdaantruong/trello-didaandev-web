extends ../layouts/common
block nav
  include ../layouts/nav
block content
  a(href="/users/create") New user

  form(action="/users/search", method="GET", class="d-flex")
    input(type="text", name="q", class="form-control mr-sm-2" placeholder="Search")
    button(class="btn btn-primary") Search
  h1 Users List
  table.table
    thead.thead-light
      tr
        th(scope='col') User Name
        th(scope='col') Phone
        th(scope='col') Actions
        th(scope='col') 
    tbody
      each user in users
        tr
          td=user.name
          td=user.phone
          td
            a.btn.btn-light(href="/users/" + user.id) View
          td
            a.btn.btn-light(href="/users/delete/" + user.id) Delete